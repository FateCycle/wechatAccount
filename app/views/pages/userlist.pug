extends ../layout

block content
   .container
      .row
         table.table.table-hover.table-bordered
            thead
               th 昵称
               th 邮箱
               th 来源
               th 身份
               th 更新时间
               th 删除
            tbody
            if userList && userList.length
               each item in userList
                     tr(class='item-id-'+ item._id)
                        td #{item.nickname}
                        td #{item.email}
                        td #{item.from}
                        td #{item.role}
                        td #{moment(item.meta.updatedAt).format('MM/DD/YYYY')}
                        td
                           button.btn.btn-danger(type='button',data-id:item._id) 删除
         
